<Page
    x:Class="ATS.Views.AssetRegistrationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ATS.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Asset Registration" FontSize="24" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <CheckBox x:Name="chkAddNotes" Content="Add notes?" Margin="0,0,0,10" Checked="ChkAddNotes_Checked" Unchecked="ChkAddNotes_Unchecked"/>
            <TextBox x:Name="txtNotes" PlaceholderText="Optional Notes" Margin="0,0,0,10" Visibility="Collapsed"/>

            <CheckBox x:Name="chkAddPurchaseDate" Content="Add purchase date?" Margin="0,0,0,10" Checked="ChkAddPurchaseDate_Checked" Unchecked="ChkAddPurchaseDate_Unchecked"/>
            <DatePicker x:Name="dpPurchaseDate" Margin="0,0,0,10" Visibility="Collapsed"/>

            <Button Content="Register Asset" Click="RegisterAssetButton_Click"/>
            <TextBlock x:Name="txtError" Foreground="Red" Margin="0,10,0,0" Visibility="Collapsed"/>
            <Button Content="Back" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
